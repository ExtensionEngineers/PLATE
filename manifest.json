{
  "manifest_version": 2,
  "name"            : "P.L.A.T.E.",
  "description"     : "Passive Learning Angular Translating Extension",
  "short_name"      : "PLATE",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon" : "images/logo.png"
